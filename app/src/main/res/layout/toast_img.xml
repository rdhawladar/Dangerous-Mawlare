<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/toast_layout_root"
    android:layout_height="match_parent"
    android:minHeight="500dp"
    android:screenOrientation="portrait"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="com.example.axu1.rdhawladar.MainActivity">


    <ImageView
        android:id="@+id/toastImg2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/image_w"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toastImg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:adjustViewBounds="true"
        android:src="@drawable/image_w"
        app:layout_constraintStart_toStartOf="@+id/toastImg2"
        app:layout_constraintTop_toTopOf="@+id/toastImg2" />


    <TextView
        android:id="@+id/toastTxt"
        android:layout_width="375dp"
        android:layout_height="135dp"
        android:textColor="#000"
        android:textSize="23dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="5dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:textColor="#000"
        android:textSize="23dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="375dp"
        android:layout_height="76dp"
        android:textColor="#000"
        android:textSize="23dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="240dp" />


</android.support.constraint.ConstraintLayout>
